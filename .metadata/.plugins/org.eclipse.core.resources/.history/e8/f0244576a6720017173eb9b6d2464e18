	</bean>

	<bean id="NewsDao" class="com.vr.daoImpl.NewsDaoImpl"></bean>
	<bean id="NewsService" class="com.vr.serviceImpl.NewsServiceImpl">
		<property name="newsDao" ref="NewsDao"></property>
	</bean>
